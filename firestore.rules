rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Groups: any authenticated user can read groups they belong to
    match /groups/{groupId} {
      allow read, write: if request.auth != null;
    }

    // Expenses: any authenticated user
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }

    // Pool Contributions: any authenticated user
    match /pool_contributions/{contribId} {
      allow read, write: if request.auth != null;
    }

    // Settlements: any authenticated user
    match /settlements/{settlementId} {
      allow read, write: if request.auth != null;
    }

    // Recurring Expenses: any authenticated user
    match /recurring_expenses/{recurringId} {
      allow read, write: if request.auth != null;
    }

    // Notifications: any authenticated user
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // Users: allow read/write to own fcmTokens
    match /users/{userId}/fcmTokens/{tokenId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
